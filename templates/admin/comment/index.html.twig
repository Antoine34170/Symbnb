{% extends 'admin/base.html.twig' %}

{% block title %}Administration des commentaires !
{% endblock %}

{% block body %}


	<div class="container-fluid">
		<h1 class="my-5">Gestion des commentaires</h1>

		<table class="table table-hover">
			<tr>
				<th>Id</th>
				<th>Date</th>
				<th>Auteur</th>
				<th>Commentaires</th>
				<th class="text-center">Note</th>
				<th>Annonce</th>
				<th>Actions</th>
			</tr>
			{% for comment in pagination.data %}
				<tbody>
					<tr>
						<td>{{ comment.id }}</td>
						<td>{{ comment.createdAt | date('d/m/Y') }}</td>
						<td>
							<img src="{{comment.author.picture}}" class="avatar avatar-mini" alt="avatar de {{ comment.author.fullName }}"> {{ comment.author.fullName }}</td>
						<td>{{ comment.content }}</td>
						<td>
							<span class="badge badge-primary rounded"> {{ comment.rating }}</span>
						</td>
						<td>{{ comment.ad.title }}</td>
						<td>
							<div class="row">
								<a href="{{path('admin_comment_edit', {'id':comment.id})}}" class="btn btn-primary">
									<i class="fas fa-edit"></i>
								</a>
								<a href="{{path('admin_comment_delete', {'id':comment.id})}}" class="btn btn-danger">
									<i class="fas fa-trash"></i>
								</a>
							</div>

						</td>
					</tr>
				</tbody>


			{% endfor %}
		</table> {{ pagination.display() }}
	</div>
{% endblock %}
